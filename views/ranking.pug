doctype
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        script.
            const ranking_data = !{JSON.stringify(ranking_data)}

        script(src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4") 
        title Geoquiz - Ranking
    body(class='bg-gradient-to-r from-pink-400 via-pink-400 to-fuchsia-400')

        a(href='/')
            button(class='bg-white border-4 block ml-auto mr-auto mt-10 text-4xl p-2.5 hover:bg-blue-300 rounded-4xl') Volver a Inicio 

        h1(class='text-6xl mt-10 border-4 bg-white p-7 w-fit ml-auto mr-auto') Tabla de Posiciones

        .filtros
            h1(class='text-4xl bg-white border-4 mt-5 p-3 w-fit ml-auto mr-auto') Filtrar por

            select#select_rank(class='text-[30px] border-4 bg-white flex ml-auto mr-auto mt-5')
                option(class ='text-center' value='puntaje') Puntaje
                option(class ='text-center' value='respuestas') Resp. Correctas 
                option(class ='text-center' value='tiempo') Tiempo

        #rank_content(class='bg-white mt-7.5 border-2 w-fit ml-auto mr-auto mb-20')        
    
    script(src='/js/ranking_data.js' defer)     
doctype
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        script(src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4") 
        title Geoquiz - Ranking
    body(class='bg-gradient-to-r from-pink-400 via-pink-400 to-fuchsia-400')

        a(href='/')
            button(class='bg-white border-4 block ml-auto mr-auto mt-10 text-4xl p-2.5 hover:bg-blue-300 rounded-4xl') Volver a Inicio 

        h1(class='text-6xl mt-10 border-4 bg-white p-7 w-fit ml-auto mr-auto') Tabla de Posiciones

        #rank_content(class='bg-white mt-7.5 border-2 w-fit ml-auto mr-auto mb-20')
            
            table(class='border-2')
             thead 
              tr(class='p-10 bg-gray-400')
               th(class='border-4 text-center p-10 text-4xl') Posicion
               th(class='border-4 text-center p-10 text-4xl') Jugador
               th(class='border-4 text-center p-10 text-4xl') Puntaje
               th(class='border-4 text-center p-10 text-4xl') Tiempo
             tbody(class='text-center text-[35px] font-mono bg-purple-300')
              each value in ranking_data
                tr
                 td(class='border-4 p-3') #{value.top} 
                 td(class='border-4 p-3') #{value.nick}
                 td(class='border-4 p-3') #{value.ptaje}
                 td(class='border-4 p-3') #{value.tiempo_record}